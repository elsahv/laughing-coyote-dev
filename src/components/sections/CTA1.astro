---
export interface Props {
  title: string;
  paragraph1: string;
  paragraph2: string;
  link: string;
}

const { title, paragraph1, paragraph2, link } = Astro.props as Props;
---

<div id="packages-section" class="bg- grid md:grid-cols-3 grid-cols-1">
  <div
    id=""
    class="bg- flex md:flex-col flex-row items- mt-3 ml-1 px-2 lg:space-y-5 lg:gap-0 gap-4"
  >
    <img
      src="https://dl.dropboxusercontent.com/scl/fi/r2memu9vr71tw03oe57kz/IMG_0300.jpg?rlkey=k9upvwvx4vudmyv88f8srhxlu&st=g5s7cqo5&dl=0"
      alt=""
      class="sq-styles 2xl:w-3/4 w-1/2 2xl:h-[320px] h-[200px]"
    />
    <img
      src="https://dl.dropboxusercontent.com/scl/fi/r2memu9vr71tw03oe57kz/IMG_0300.jpg?rlkey=k9upvwvx4vudmyv88f8srhxlu&st=g5s7cqo5&dl=0"
      alt=""
      class="sq-styles 2xl:w-3/4 w-1/2 2xl:h-[320px] h-[200px]"
    />
  </div>

  <div
    id="content-container"
    class="bg- 2xl:w-3/4 col-span-2 2xl:mr-0 mr-[35px] 2xl:pt-5 xl:px-5 p-5 2xl:mt-[55px] space-y-8"
  >
    <h2 class="text-3xl 2xl:pt-5 2xl:mt-5 text-left font-bold underline">
      {title}
    </h2>
    <p>{paragraph2}</p>
    <p class="text-test1 underline">
      <a class="text-" href={link}> {paragraph1}</a>
    </p>
  </div>
</div>
