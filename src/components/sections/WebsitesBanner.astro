        id="grid"
        class="grid lg:grid-cols-4 md:grid-cols-2 grid-cols-1 2xl:gap-5 gap-1"
      >
        {
          items.map((item) => (
            <div
              id="sq"
              class="2xl:px-3 px-2 py-2 sq-styles-teal m-1 hover:bg-test2"
            >
              <span class="font- flex justify-center items-center text-teal ">
                <a href={item.siteLink}>{item.title}</a>
