---
import ButtonProps from "../shared/ButtonProps.astro";
const items = [
  {
    title: "Growing Pup",
    listitem1: "landing pg",
    listitem2:
      "This is a template catered towards people starting out, not much custom.",
    listitem3: "Things that can be custom should be already made",
    listitem4:
      "Lorem ipsum dolor sit amet consectetur adipisicing elit. Amet enim officiis ipsum veniam,",
    img: "https://images.pexels.com/photos/3046629/pexels-photo-3046629.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1",
    btn1: "see demo",
    btn2: "contact",
    btnLink1: "/template 1",
    btnLink2: "/contact",
  },
  {
    title: "Rising Carnivore",
    listitem1: "landing pg with content",
    listitem2: "Taking your business to a whole another level.",
    listitem3: "Custom, contact for unique and custom work,",
    listitem4: "see grid below for some of the possibilities!",
    img: "https://images.pexels.com/photos/26655860/pexels-photo-26655860/free-photo-of-red-fox-walking-in-the-meadow.jpeg?auto=compress&cs=tinysrgb&w=600",
    btn1: "see demo",
    btn2: "contact",
    btnLink1: "/template 2",
    btnLink2: "/contact",
  },
];
---

<h2 class="font-bold pb-1 pl-1">WHATS INCLUDED (PKGS)</h2>
<div id="grid" class="grid lg:grid-cols-2 grid-cols-1 gap-x-5 gap-y-12">
  {
    items.map((item) => (
      <div id="card" class="p-5 opacity-80 hover:opacity-100 rounded-lg">
        <div id="img-wrapper" class=" w-full my-1">
          <img src={item.img} alt={item.title} class="sq-styles" />
        </div>

        <div id="content-wrapper" class="p-1">
          <h2 class="font-bold text-2xl">{item.title}</h2>
          <ul class="text-lg pb-3 pt-1">
            <li>- {item.listitem1}</li>
            <li>- {item.listitem2}</li>
            <li>- {item.listitem3}</li>
            <li>- {item.listitem4}</li>
            <ButtonProps btn1="see demo" btn1Link="contact" />
          </ul>
        </div>
      </div>
    ))
  }
</div>
