---
export interface Props {
  title: string;
  pkgNo: string;
  desc1: string;
  desc2: string;
  tag1: string;
  tag2: string;
  pkgParagraph: string;
  pkgLink: string;
  sq1Img: string;
  sq3Img: string;
  sq3desc: string;
}

const {
  title,
  pkgNo,
  desc1,
  desc2,
  tag1,
  tag2,
  pkgParagraph,
  pkgLink,
  sq1Img,
  sq3Img,
  sq3desc,
} = Astro.props as Props;
---

<div
  id="package-card"
  class="bg-parchment text-carribean p-5 mt-5 sq-styles grid xl:grid-cols-2 grid-cols-1 gap-2"
>
