---
export interface Props {
  BannerTitle: string;
  paragraph: string;
}

const { BannerTitle, paragraph } = Astro.props as Props;
---

<div id="BannerTitle-wrapper" class="bg- mt-5 py-5">
  <div id="BannerTitle-section" class="flex justify-center">
    <h2 class="2xl:text-5xl md:text-4xl text-3xl px-5 pt-2 font-bold underline">
      {BannerTitle}
    </h2>
  </div>

  <div id="Banner-paragraph" class="bg- flex justify-center md:mb-5">
    <div class="pt-1 pb-5 bg-">
      <p class="bg- md:text-2xl text-xl px-5 mx-5 max-w-6xl">
        {paragraph}
      </p>
    </div>
  </div>
</div>
