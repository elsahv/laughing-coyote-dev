---
import ButtonProps from "./shared/ButtonProps.astro";

export interface Props {
  title: string;
  listitem1: string;
  listitem2: string;
  listitem3: string;
  listitem4: string;
  heroImg: string;
}

const { title, listitem1, listitem2, listitem3, listitem4, heroImg } =
  Astro.props as Props;
---

<div
  id=""
  class="px-5 2xl:mx-[150px] bg- text-onyx 2xl:h-screen flex justify-center pt-1"
>
  <div id="grid" class="bg- grid md:grid-cols-2 grid-cols-1">
    <div id="SQ1" class="flex justify-end items-center bg- 2xl:p-5 mb-5">
      <img src={heroImg} class="md:w-3/4 sq-styles" />
    </div>
    <div
      id="sq2"
      class="flex bg- md:justify-center md:items-center md:p-5 pb-1"
    >
      <div id="padding" class="lg:p-5 p-1 bg-">
        <div class="">
          <h2 class="text-2xl bg- pb-2 border-b-2 border-black">
            {title}
          </h2>
          <ul
            class="space-y-5 list-decimal lowercase md:text-xl text-md pt-5 pl-[30px]"
          >
            <li class="">{listitem1}</li>
            <li class="">{listitem2}</li>
            <li class="">{listitem3}</li>
            <li class="">{listitem4}</li>
          </ul>
          <!-- * BTN WRAPPER   v-->
          <ButtonProps btn1="see case studies" btn1Link="/#social-proof" />
          <!-- * BTN WRAPPER   ^-->
        </div>
      </div>
      <!-- <img src={heroImg} class="md:w-3/4 border border-black" /> -->
    </div>
  </div>
</div>
